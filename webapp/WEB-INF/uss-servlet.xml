<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<context:component-scan base-package="uss" />
	
	<mvc:annotation-driven />
	<mvc:default-servlet-handler />
	
	<mvc:resources location="/css/" mapping="/css/**" />
	<mvc:resources location="/directive/" mapping="/directive/**" />
	<mvc:resources location="/js/" mapping="/js/**" />
	<mvc:resources location="/library/" mapping="/library/**" />
	<mvc:resources location="/template1.html" mapping="/template1.html" />
	<mvc:resources location="/template2.html" mapping="/template2.html" />
	
<!-- 	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver"
		/> -->
		
	<bean id="gsonHttpMessageConverter" class="org.springframework.http.converter.json.GsonHttpMessageConverter" />
</beans>
